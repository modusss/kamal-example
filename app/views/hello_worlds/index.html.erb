<h1>Hello Worlds</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hello_worlds.each do |hello_world| %>
      <tr>
        <td><%= hello_world.message %></td>
        <td><%= link_to 'Show', hello_world %></td>
        <td><%= link_to 'Edit', edit_hello_world_path(hello_world) %></td>
        <td><%= link_to 'Destroy', hello_world, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hello World', new_hello_world_path %>
